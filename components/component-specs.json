      "specs": {
        "width": {
          "expanded": "var(--cs-sidebar-default)",
          "collapsed": "var(--cs-sidebar-collapsed)"
        },
        "background": "var(--cs-bg-primary)",
        "borderRight": "var(--cs-border-thin) solid var(--cs-border-primary)",
