{
  "meta": {
    "name": "CarbonS Design System — Component Specifications",
    "version": "1.0.0",
    "totalComponents": 30,
    "categories": ["Foundation", "Input", "Navigation", "Feedback", "Data Display", "Layout", "Overlay"]
  },

  "components": {

    "01_Button": {
      "category": "Foundation",
      "description": "Primary interactive element for triggering actions. Generous padding and subtle depth convey luxury.",
      "variants": {
        "primary": {
          "background": "var(--cs-interactive-primary)",
          "foreground": "var(--cs-fg-inverse)",
          "border": "none",
          "shadow": "var(--cs-shadow-sm)"
        },
        "secondary": {
          "background": "transparent",
          "foreground": "var(--cs-fg-primary)",
          "border": "var(--cs-border-thin) solid var(--cs-border-primary)",
          "shadow": "none"
        },
        "tertiary": {
          "background": "transparent",
          "foreground": "var(--cs-fg-brand)",
          "border": "none",
          "shadow": "none"
        },
        "danger": {
          "background": "var(--cs-error-500)",
          "foreground": "var(--cs-fg-inverse)",
          "border": "none",
          "shadow": "var(--cs-shadow-sm)"
        },
        "ghost": {
          "background": "transparent",
          "foreground": "var(--cs-fg-secondary)",
          "border": "none",
          "shadow": "none"
        }
      },
      "sizes": {
        "sm": { "height": "var(--cs-size-button-sm)", "padding": "0 var(--cs-space-3)", "fontSize": "var(--cs-text-label-sm)", "radius": "var(--cs-radius-md)" },
        "md": { "height": "var(--cs-size-button-md)", "padding": "0 var(--cs-space-5)", "fontSize": "var(--cs-text-label-md)", "radius": "var(--cs-radius-md)" },
        "lg": { "height": "var(--cs-size-button-lg)", "padding": "0 var(--cs-space-6)", "fontSize": "var(--cs-text-label-lg)", "radius": "var(--cs-radius-lg)" },
        "xl": { "height": "var(--cs-size-button-xl)", "padding": "0 var(--cs-space-8)", "fontSize": "var(--cs-text-label-lg)", "radius": "var(--cs-radius-lg)" }
      },
      "states": {
        "default": { "cursor": "pointer", "transition": "all var(--cs-duration-fast) var(--cs-ease-default)" },
        "hover": { "filter": "brightness(1.06)", "shadow": "var(--cs-shadow-md)", "transform": "translateY(-1px)" },
        "active": { "filter": "brightness(0.95)", "transform": "translateY(0)", "shadow": "var(--cs-shadow-xs)" },
        "focus": { "outline": "none", "boxShadow": "var(--cs-focus-ring)" },
        "disabled": { "opacity": 0.5, "cursor": "not-allowed", "pointerEvents": "none" },
        "loading": { "opacity": 0.85, "cursor": "wait" }
      },
      "props": {
        "variant": "primary | secondary | tertiary | danger | ghost",
        "size": "sm | md | lg | xl",
        "leftIcon": "ReactNode",
        "rightIcon": "ReactNode",
        "isLoading": "boolean",
        "isDisabled": "boolean",
        "isFullWidth": "boolean"
      },
      "accessibility": {
        "role": "button",
        "ariaLabel": "Required when icon-only",
        "ariaDisabled": "Mirrors isDisabled",
        "focusVisible": true,
        "keyboardActivation": "Enter, Space"
      }
    },

    "02_IconButton": {
      "category": "Foundation",
      "description": "Compact button for icon-only actions. Square aspect ratio with centered icon.",
      "variants": ["primary", "secondary", "ghost", "danger"],
      "sizes": {
        "sm": { "size": "32px", "iconSize": "var(--cs-size-icon-sm)", "radius": "var(--cs-radius-md)" },
        "md": { "size": "40px", "iconSize": "var(--cs-size-icon-md)", "radius": "var(--cs-radius-md)" },
        "lg": { "size": "48px", "iconSize": "var(--cs-size-icon-lg)", "radius": "var(--cs-radius-lg)" }
      },
      "states": {
        "default": {},
        "hover": { "background": "var(--cs-bg-tertiary)" },
        "active": { "background": "var(--cs-carbon-300)" },
        "focus": { "boxShadow": "var(--cs-focus-ring)" },
        "disabled": { "opacity": 0.5 }
      },
      "accessibility": {
        "ariaLabel": "REQUIRED — must describe action",
        "role": "button"
      }
    },

    "03_Input": {
      "category": "Input",
      "description": "Text input field with floating or stacked label. Clean single-line border aesthetic.",
      "anatomy": ["Container", "Label", "Input field", "Helper text", "Leading icon (optional)", "Trailing icon (optional)", "Clear button (optional)"],
      "variants": {
        "outlined": { "border": "var(--cs-border-thin) solid var(--cs-border-primary)", "background": "transparent" },
        "filled": { "border": "none", "background": "var(--cs-bg-secondary)", "borderBottom": "var(--cs-border-medium) solid var(--cs-border-primary)" }
      },
      "sizes": {
        "sm": { "height": "var(--cs-size-input-sm)", "fontSize": "var(--cs-text-body-sm)", "padding": "0 var(--cs-space-3)" },
        "md": { "height": "var(--cs-size-input-md)", "fontSize": "var(--cs-text-body-md)", "padding": "0 var(--cs-space-4)" },
        "lg": { "height": "var(--cs-size-input-lg)", "fontSize": "var(--cs-text-body-lg)", "padding": "0 var(--cs-space-5)" }
      },
      "states": {
        "default": { "borderColor": "var(--cs-border-primary)" },
        "hover": { "borderColor": "var(--cs-border-secondary)" },
        "focus": { "borderColor": "var(--cs-border-focus)", "boxShadow": "0 0 0 3px rgba(212, 133, 74, 0.12)" },
        "filled": { "labelTransform": "translateY(-100%) scale(0.85)" },
        "error": { "borderColor": "var(--cs-border-error)", "boxShadow": "0 0 0 3px rgba(229, 77, 77, 0.1)" },
        "success": { "borderColor": "var(--cs-border-success)" },
        "disabled": { "opacity": 0.5, "background": "var(--cs-bg-tertiary)", "cursor": "not-allowed" },
        "readonly": { "background": "var(--cs-bg-secondary)", "cursor": "default" }
      },
      "props": {
        "label": "string",
        "placeholder": "string",
        "helperText": "string",
        "errorMessage": "string",
        "size": "sm | md | lg",
        "variant": "outlined | filled",
        "leadingIcon": "ReactNode",
        "trailingIcon": "ReactNode",
        "isClearable": "boolean",
        "isRequired": "boolean",
        "isDisabled": "boolean",
        "isReadOnly": "boolean"
      },
      "accessibility": {
        "label": "Always required via <label> or aria-label",
        "ariaDescribedby": "Links to helper/error text",
        "ariaInvalid": "true when error state",
        "ariaRequired": "true when required"
      }
    },

    "04_Textarea": {
      "category": "Input",
      "description": "Multi-line text input with auto-resize option. Maintains Input styling language.",
      "sizes": { "sm": { "minHeight": "80px" }, "md": { "minHeight": "120px" }, "lg": { "minHeight": "200px" } },
      "states": ["default", "hover", "focus", "error", "disabled", "readonly"],
      "props": {
        "label": "string",
        "maxLength": "number",
        "showCharCount": "boolean",
        "autoResize": "boolean",
        "resize": "none | vertical | both"
      }
    },

    "05_Select": {
      "category": "Input",
      "description": "Dropdown selector with search and multi-select capabilities. Organic reveal animation.",
      "anatomy": ["Trigger", "Dropdown panel", "Option item", "Option group", "Search input", "Empty state"],
      "states": {
        "default": {},
        "hover": { "borderColor": "var(--cs-border-secondary)" },
        "open": { "borderColor": "var(--cs-border-focus)", "shadow": "var(--cs-shadow-lg)" },
        "selected": { "fontWeight": "var(--cs-weight-medium)" },
        "error": { "borderColor": "var(--cs-border-error)" },
        "disabled": { "opacity": 0.5 }
      },
      "props": {
        "options": "Option[]",
        "isMulti": "boolean",
        "isSearchable": "boolean",
        "placeholder": "string",
        "isClearable": "boolean"
      },
      "animation": {
        "open": "cs-scale-in var(--cs-duration-moderate) var(--cs-ease-spring)",
        "close": "cs-fade-out var(--cs-duration-fast) var(--cs-ease-in)"
      }
    },

    "06_Checkbox": {
      "category": "Input",
      "description": "Binary selection with organic check animation. Supports indeterminate for tree structures.",
      "sizes": {
        "sm": { "box": "16px", "radius": "var(--cs-radius-sm)" },
        "md": { "box": "20px", "radius": "var(--cs-radius-sm)" },
        "lg": { "box": "24px", "radius": "var(--cs-radius-md)" }
      },
      "states": {
        "unchecked": { "border": "var(--cs-border-medium) solid var(--cs-border-secondary)", "background": "transparent" },
        "checked": { "border": "none", "background": "var(--cs-interactive-primary)", "icon": "check-white" },
        "indeterminate": { "border": "none", "background": "var(--cs-interactive-primary)", "icon": "minus-white" },
        "hover": { "borderColor": "var(--cs-interactive-primary)" },
        "focus": { "boxShadow": "var(--cs-focus-ring)" },
        "disabled": { "opacity": 0.4 },
        "error": { "borderColor": "var(--cs-error-500)" }
      },
      "animation": {
        "check": "cs-scale-in var(--cs-duration-fast) var(--cs-ease-spring)"
      },
      "accessibility": {
        "role": "checkbox",
        "ariaChecked": "true | false | mixed",
        "keyboardToggle": "Space"
      }
    },

    "07_RadioGroup": {
      "category": "Input",
      "description": "Single selection from a group. Circular indicator with inner dot animation.",
      "sizes": {
        "sm": { "circle": "16px" },
        "md": { "circle": "20px" },
        "lg": { "circle": "24px" }
      },
      "states": {
        "unselected": { "border": "var(--cs-border-medium) solid var(--cs-border-secondary)" },
        "selected": { "border": "var(--cs-border-thick) solid var(--cs-interactive-primary)", "innerDot": "var(--cs-interactive-primary)" },
        "hover": { "borderColor": "var(--cs-interactive-primary)" },
        "focus": { "boxShadow": "var(--cs-focus-ring)" },
        "disabled": { "opacity": 0.4 }
      },
      "accessibility": {
        "role": "radiogroup / radio",
        "ariaChecked": "boolean",
        "keyboardNav": "Arrow keys to navigate, Space to select"
      }
    },

    "08_Toggle": {
      "category": "Input",
      "description": "Binary switch with satisfying spring animation. Thumb slides with overshoot.",
      "sizes": {
        "sm": { "track": "36px x 20px", "thumb": "16px" },
        "md": { "track": "44px x 24px", "thumb": "20px" },
        "lg": { "track": "52px x 28px", "thumb": "24px" }
      },
      "states": {
        "off": { "trackColor": "var(--cs-carbon-300)", "thumbColor": "white" },
        "on": { "trackColor": "var(--cs-interactive-primary)", "thumbColor": "white" },
        "hover": { "trackOpacity": 0.85 },
        "focus": { "boxShadow": "var(--cs-focus-ring)" },
        "disabled": { "opacity": 0.4 }
      },
      "animation": {
        "toggle": "transform var(--cs-duration-moderate) var(--cs-ease-spring)"
      },
      "accessibility": {
        "role": "switch",
        "ariaChecked": "boolean",
        "keyboardToggle": "Space"
      }
    },

    "09_DatePicker": {
      "category": "Input",
      "description": "Calendar-based date selection. Clean grid layout with organic hover states.",
      "anatomy": ["Input trigger", "Calendar dropdown", "Month/year navigation", "Day grid", "Today indicator"],
      "states": ["default", "hover", "open", "selected", "range", "disabled", "error"],
      "props": {
        "mode": "single | range",
        "minDate": "Date",
        "maxDate": "Date",
        "format": "string",
        "placeholder": "string"
      }
    },

    "10_Slider": {
      "category": "Input",
      "description": "Range value selector with smooth thumb tracking. Supports single and range mode.",
      "anatomy": ["Track", "Fill", "Thumb", "Value tooltip", "Step markers"],
      "states": {
        "default": { "trackColor": "var(--cs-carbon-200)", "fillColor": "var(--cs-interactive-primary)" },
        "hover": { "thumbScale": 1.15 },
        "active": { "thumbScale": 1.25, "showTooltip": true },
        "focus": { "thumbShadow": "var(--cs-focus-ring)" },
        "disabled": { "opacity": 0.4 }
      },
      "props": {
        "min": "number",
        "max": "number",
        "step": "number",
        "mode": "single | range",
        "showTooltip": "boolean"
      }
    },

    "11_Avatar": {
      "category": "Data Display",
      "description": "User representation with image, initials, or icon fallback. Warm border radius.",
      "sizes": {
        "xs": { "size": "var(--cs-size-avatar-xs)", "fontSize": "10px" },
        "sm": { "size": "var(--cs-size-avatar-sm)", "fontSize": "var(--cs-text-label-sm)" },
        "md": { "size": "var(--cs-size-avatar-md)", "fontSize": "var(--cs-text-label-md)" },
        "lg": { "size": "var(--cs-size-avatar-lg)", "fontSize": "var(--cs-text-label-lg)" },
        "xl": { "size": "var(--cs-size-avatar-xl)", "fontSize": "var(--cs-text-body-lg)" },
        "2xl": { "size": "var(--cs-size-avatar-2xl)", "fontSize": "var(--cs-text-heading-md)" }
      },
      "variants": {
        "image": { "objectFit": "cover" },
        "initials": { "background": "var(--cs-bg-brand-subtle)", "color": "var(--cs-fg-brand)" },
        "icon": { "background": "var(--cs-bg-tertiary)", "color": "var(--cs-fg-secondary)" }
      },
      "shape": "circle (default) | rounded-lg",
      "statusIndicator": {
        "online": "var(--cs-success-500)",
        "offline": "var(--cs-carbon-400)",
        "busy": "var(--cs-error-500)",
        "away": "var(--cs-warning-500)"
      },
      "props": {
        "src": "string",
        "alt": "string (REQUIRED)",
        "name": "string",
        "size": "xs | sm | md | lg | xl | 2xl",
        "status": "online | offline | busy | away"
      }
    },

    "12_AvatarGroup": {
      "category": "Data Display",
      "description": "Stacked avatar collection with overflow count. Negative margin overlap.",
      "specs": {
        "overlap": "-8px margin-left per avatar",
        "maxVisible": 5,
        "overflowBadge": { "background": "var(--cs-bg-tertiary)", "fontSize": "var(--cs-text-label-sm)" }
      }
    },

    "13_Badge": {
      "category": "Data Display",
      "description": "Status indicator and count label. Pill-shaped with subtle shadow.",
      "variants": {
        "solid": { "background": "filled", "foreground": "white" },
        "soft": { "background": "10% opacity fill", "foreground": "full color" },
        "outline": { "background": "transparent", "border": "1px solid" }
      },
      "colors": ["default", "brand", "success", "warning", "error", "info"],
      "sizes": {
        "sm": { "height": "20px", "fontSize": "var(--cs-text-label-sm)", "padding": "0 var(--cs-space-1-5)", "radius": "var(--cs-radius-full)" },
        "md": { "height": "24px", "fontSize": "var(--cs-text-label-sm)", "padding": "0 var(--cs-space-2)", "radius": "var(--cs-radius-full)" },
        "lg": { "height": "28px", "fontSize": "var(--cs-text-label-md)", "padding": "0 var(--cs-space-3)", "radius": "var(--cs-radius-full)" }
      },
      "props": {
        "label": "string",
        "count": "number",
        "maxCount": "number (shows 99+ pattern)",
        "dot": "boolean (status dot only, no text)",
        "removable": "boolean"
      }
    },

    "14_Tag": {
      "category": "Data Display",
      "description": "Categorization label with optional dismiss. Rounded with comfortable padding.",
      "variants": ["solid", "soft", "outline"],
      "sizes": {
        "sm": { "height": "24px", "fontSize": "var(--cs-text-label-sm)", "radius": "var(--cs-radius-md)" },
        "md": { "height": "28px", "fontSize": "var(--cs-text-label-md)", "radius": "var(--cs-radius-md)" },
        "lg": { "height": "32px", "fontSize": "var(--cs-text-label-md)", "radius": "var(--cs-radius-lg)" }
      },
      "states": ["default", "hover", "active", "focus", "disabled"],
      "props": {
        "label": "string",
        "leadingIcon": "ReactNode",
        "isDismissible": "boolean",
        "isSelected": "boolean",
        "color": "string"
      }
    },

    "15_Card": {
      "category": "Layout",
      "description": "Content container with warm shadow and generous padding. The workhorse of the dashboard.",
      "anatomy": ["Container", "Header (optional)", "Body", "Footer (optional)", "Media (optional)"],
      "variants": {
        "elevated": { "background": "var(--cs-bg-secondary)", "shadow": "var(--cs-shadow-sm)", "border": "none" },
        "outlined": { "background": "var(--cs-bg-primary)", "shadow": "none", "border": "var(--cs-border-thin) solid var(--cs-border-primary)" },
        "filled": { "background": "var(--cs-bg-secondary)", "shadow": "none", "border": "none" },
        "ghost": { "background": "transparent", "shadow": "none", "border": "none" }
      },
      "sizes": {
        "sm": { "padding": "var(--cs-space-4)", "radius": "var(--cs-radius-lg)", "gap": "var(--cs-space-3)" },
        "md": { "padding": "var(--cs-space-6)", "radius": "var(--cs-radius-xl)", "gap": "var(--cs-space-4)" },
        "lg": { "padding": "var(--cs-space-8)", "radius": "var(--cs-radius-2xl)", "gap": "var(--cs-space-6)" }
      },
      "states": {
        "default": {},
        "hover": { "shadow": "var(--cs-shadow-md)", "transform": "translateY(-2px)", "_condition": "only when clickable" },
        "active": { "shadow": "var(--cs-shadow-sm)", "transform": "translateY(0)" },
        "focus": { "boxShadow": "var(--cs-focus-ring)" },
        "selected": { "border": "var(--cs-border-thick) solid var(--cs-interactive-primary)" }
      },
      "animation": {
        "hover": "all var(--cs-duration-normal) var(--cs-ease-default)"
      }
    },

    "16_Table": {
      "category": "Data Display",
      "description": "Data table with sorting, selection, and pagination. Clean horizontal rules only.",
      "anatomy": ["Container", "Header row", "Body rows", "Footer/pagination", "Empty state"],
      "specs": {
        "rowHeight": { "compact": "40px", "default": "52px", "comfortable": "64px" },
        "headerHeight": "44px",
        "cellPadding": "var(--cs-space-3) var(--cs-space-4)",
        "borderBottom": "var(--cs-border-thin) solid var(--cs-border-primary)",
        "headerBackground": "var(--cs-bg-secondary)",
        "headerFontWeight": "var(--cs-weight-semibold)",
        "headerFontSize": "var(--cs-text-label-sm)",
        "headerTextTransform": "none",
        "headerColor": "var(--cs-fg-secondary)"
      },
      "states": {
        "rowDefault": {},
        "rowHover": { "background": "var(--cs-bg-secondary)" },
        "rowSelected": { "background": "var(--cs-bg-brand-subtle)" },
        "rowExpanded": { "borderBottom": "none" },
        "sortable": { "cursor": "pointer" },
        "sortAsc": { "icon": "chevron-up" },
        "sortDesc": { "icon": "chevron-down" }
      },
      "features": ["Sorting", "Row selection", "Row expansion", "Column resize", "Sticky header", "Pagination", "Empty state", "Loading skeleton"]
    },

    "17_Tabs": {
      "category": "Navigation",
      "description": "Content section switcher with animated underline indicator. Fluid width tabs.",
      "variants": {
        "underline": { "indicator": "2px bottom border", "indicatorColor": "var(--cs-interactive-primary)" },
        "pills": { "indicator": "filled background", "indicatorColor": "var(--cs-bg-tertiary)", "radius": "var(--cs-radius-full)" },
        "enclosed": { "indicator": "border-bottom removed", "background": "var(--cs-bg-secondary)" }
      },
      "sizes": {
        "sm": { "height": "36px", "fontSize": "var(--cs-text-label-sm)", "gap": "var(--cs-space-1)" },
        "md": { "height": "44px", "fontSize": "var(--cs-text-label-md)", "gap": "var(--cs-space-2)" },
        "lg": { "height": "52px", "fontSize": "var(--cs-text-label-lg)", "gap": "var(--cs-space-3)" }
      },
      "states": {
        "default": { "color": "var(--cs-fg-secondary)" },
        "hover": { "color": "var(--cs-fg-primary)" },
        "active": { "color": "var(--cs-fg-brand)", "fontWeight": "var(--cs-weight-semibold)" },
        "disabled": { "opacity": 0.4 },
        "focus": { "boxShadow": "var(--cs-focus-ring)" }
      },
      "animation": {
        "indicator": "transform var(--cs-duration-moderate) var(--cs-ease-spring)"
      },
      "accessibility": {
        "role": "tablist / tab / tabpanel",
        "ariaSelected": "boolean",
        "keyboardNav": "Arrow keys to navigate, Enter/Space to select"
      }
    },

    "18_Breadcrumb": {
      "category": "Navigation",
      "description": "Hierarchical page location indicator. Subtle separator with truncation for deep paths.",
