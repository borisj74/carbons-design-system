        "hover": { "color": "var(--cs-fg-primary)", "background": "var(--cs-bg-secondary)" },
        "active": { "color": "var(--cs-fg-brand)", "background": "var(--cs-bg-brand-subtle)", "fontWeight": "var(--cs-weight-medium)" },
        "focus": { "boxShadow": "var(--cs-focus-ring)" }
      },
      "animation": {
        "collapse": "width var(--cs-duration-slow) var(--cs-ease-in-out)"
      }
    },

