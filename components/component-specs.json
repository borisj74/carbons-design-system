      },
      "states": {
        "linkDefault": { "color": "var(--cs-fg-secondary)" },
        "linkHover": { "color": "var(--cs-fg-primary)", "textDecoration": "underline" },
        "current": { "color": "var(--cs-fg-primary)", "fontWeight": "var(--cs-weight-medium)" }
      },
      "accessibility": {
        "role": "navigation",
        "ariaLabel": "Breadcrumb",
        "ariaCurrent": "page (on last item)"
      }
    },

