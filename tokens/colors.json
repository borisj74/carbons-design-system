    "alias": {
      "_description": "Light mode semantic aliases. Components reference ONLY these tokens.",

      "background": {
        "primary":    { "$value": "{color.primitive.carbon.50}", "$type": "color", "_description": "Main page background" },
        "secondary":  { "$value": "{color.primitive.carbon.100}", "$type": "color", "_description": "Card / elevated surface" },
        "tertiary":   { "$value": "{color.primitive.carbon.200}", "$type": "color", "_description": "Subtle differentiation" },
        "inverse":    { "$value": "{color.primitive.carbon.900}", "$type": "color", "_description": "Dark surfaces for contrast" },
        "overlay":    { "$value": "rgba(15, 14, 13, 0.48)", "$type": "color", "_description": "Modal / dialog backdrop" },
        "brand":      { "$value": "{color.primitive.ember.500}", "$type": "color", "_description": "Brand-colored background" },
        "brand-subtle": { "$value": "{color.primitive.ember.50}", "$type": "color", "_description": "Subtle brand tint" }
      },

      "foreground": {
        "primary":   { "$value": "{color.primitive.carbon.900}", "$type": "color", "_description": "Primary text, headings" },
        "secondary": { "$value": "{color.primitive.carbon.600}", "$type": "color", "_description": "Supporting text" },
        "tertiary":  { "$value": "{color.primitive.carbon.400}", "$type": "color", "_description": "Placeholder, disabled text" },
        "inverse":   { "$value": "{color.primitive.carbon.50}", "$type": "color", "_description": "Text on dark backgrounds" },
        "brand":     { "$value": "{color.primitive.ember.600}", "$type": "color", "_description": "Brand-colored text" },
        "link":      { "$value": "{color.primitive.ember.600}", "$type": "color", "_description": "Interactive text links" },
        "link-hover": { "$value": "{color.primitive.ember.700}", "$type": "color", "_description": "Link hover state" }
      },

      "border": {
        "primary":   { "$value": "{color.primitive.carbon.200}", "$type": "color", "_description": "Default border" },
        "secondary": { "$value": "{color.primitive.carbon.300}", "$type": "color", "_description": "Prominent border" },
        "focus":     { "$value": "{color.primitive.ember.500}", "$type": "color", "_description": "Focus ring color" },
        "error":     { "$value": "{color.semantic.error.500}", "$type": "color", "_description": "Error border" },
        "success":   { "$value": "{color.semantic.success.500}", "$type": "color", "_description": "Success border" }
      },

      "interactive": {
        "primary":        { "$value": "{color.primitive.ember.500}", "$type": "color", "_description": "Primary button / CTA" },
        "primary-hover":  { "$value": "{color.primitive.ember.600}", "$type": "color", "_description": "Primary hover" },
        "primary-active": { "$value": "{color.primitive.ember.700}", "$type": "color", "_description": "Primary pressed" },
        "secondary":        { "$value": "{color.primitive.sage.500}", "$type": "color", "_description": "Secondary action" },
        "secondary-hover":  { "$value": "{color.primitive.sage.600}", "$type": "color", "_description": "Secondary hover" },
        "secondary-active": { "$value": "{color.primitive.sage.700}", "$type": "color", "_description": "Secondary pressed" },
        "disabled":       { "$value": "{color.primitive.carbon.300}", "$type": "color", "_description": "Disabled state" }
      }
    },

