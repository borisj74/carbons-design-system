      "_description": "Data visualization palette — 8 colors with organic harmony.",
      "series-1": { "$value": "{color.primitive.ember.500}", "$type": "color" },
      "series-2": { "$value": "{color.primitive.sage.500}", "$type": "color" },
      "series-3": { "$value": "{color.primitive.clay.500}", "$type": "color" },
      "series-4": { "$value": "{color.semantic.info.500}", "$type": "color" },
      "series-5": { "$value": "{color.primitive.ember.300}", "$type": "color" },
      "series-6": { "$value": "{color.primitive.sage.300}", "$type": "color" },
      "series-7": { "$value": "{color.primitive.clay.300}", "$type": "color" },
