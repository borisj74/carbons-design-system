        "primary":        { "$value": "{color.primitive.ember.500}", "$type": "color" },
        "primary-hover":  { "$value": "{color.primitive.ember.400}", "$type": "color" },
        "primary-active": { "$value": "{color.primitive.ember.300}", "$type": "color" },
        "secondary":        { "$value": "{color.primitive.sage.500}", "$type": "color" },
        "secondary-hover":  { "$value": "{color.primitive.sage.400}", "$type": "color" },
        "secondary-active": { "$value": "{color.primitive.sage.300}", "$type": "color" },
        "disabled":       { "$value": "{color.primitive.carbon.700}", "$type": "color" }
