        "primary":    { "$value": "{color.primitive.carbon.950}", "$type": "color" },
        "secondary":  { "$value": "{color.primitive.carbon.900}", "$type": "color" },
        "tertiary":   { "$value": "{color.primitive.carbon.800}", "$type": "color" },
        "inverse":    { "$value": "{color.primitive.carbon.100}", "$type": "color" },
        "overlay":    { "$value": "rgba(10, 9, 8, 0.64)", "$type": "color" },
        "brand":      { "$value": "{color.primitive.ember.600}", "$type": "color" },
