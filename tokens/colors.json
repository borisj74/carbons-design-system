        "tertiary":  { "$value": "{color.primitive.carbon.500}", "$type": "color" },
        "inverse":   { "$value": "{color.primitive.carbon.900}", "$type": "color" },
        "brand":     { "$value": "{color.primitive.ember.400}", "$type": "color" },
        "link":      { "$value": "{color.primitive.ember.400}", "$type": "color" },
        "link-hover": { "$value": "{color.primitive.ember.300}", "$type": "color" }
      },

      "border": {
        "primary":   { "$value": "{color.primitive.carbon.800}", "$type": "color" },
        "secondary": { "$value": "{color.primitive.carbon.700}", "$type": "color" },
        "focus":     { "$value": "{color.primitive.ember.400}", "$type": "color" },
        "error":     { "$value": "{color.semantic.error.400}", "$type": "color" },
