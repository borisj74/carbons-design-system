        "900": { "$value": "#613524", "$type": "color" },
        "950": { "$value": "#3D1F14", "$type": "color" }
      },

      "sage": {
        "_description": "Secondary accent — muted botanical green. Conveys growth, balance, and organic trust.",
        "50":  { "$value": "#F6F8F5", "$type": "color" },
