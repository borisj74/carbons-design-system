{
  "$schema": "https://design-tokens.org/schema.json",
  "meta": {
    "name": "CarbonS Design System — Spacing & Layout Tokens",
    "version": "1.0.0",
    "description": "8px base grid system. Generous whitespace reinforces the luxury/minimal brand."
  },

  "spacing": {
    "_description": "8px base grid with half-step for fine adjustments. Values in rem.",

    "0":   { "$value": "0",       "$type": "dimension", "_px": "0px" },
    "0.5": { "$value": "0.125rem", "$type": "dimension", "_px": "2px",  "_description": "Micro spacing — focus rings, icon padding" },
    "1":   { "$value": "0.25rem",  "$type": "dimension", "_px": "4px",  "_description": "Tight spacing — inline elements, tag padding" },
    "1.5": { "$value": "0.375rem", "$type": "dimension", "_px": "6px",  "_description": "Small padding — compact UI" },
    "2":   { "$value": "0.5rem",   "$type": "dimension", "_px": "8px",  "_description": "Base unit — standard gap, icon margin" },
    "3":   { "$value": "0.75rem",  "$type": "dimension", "_px": "12px", "_description": "Input padding, card inner spacing" },
    "4":   { "$value": "1rem",     "$type": "dimension", "_px": "16px", "_description": "Standard padding, inter-component gap" },
    "5":   { "$value": "1.25rem",  "$type": "dimension", "_px": "20px", "_description": "Comfortable padding" },
    "6":   { "$value": "1.5rem",   "$type": "dimension", "_px": "24px", "_description": "Card padding, section gap" },
    "8":   { "$value": "2rem",     "$type": "dimension", "_px": "32px", "_description": "Component group spacing" },
    "10":  { "$value": "2.5rem",   "$type": "dimension", "_px": "40px", "_description": "Large spacing" },
    "12":  { "$value": "3rem",     "$type": "dimension", "_px": "48px", "_description": "Section padding (mobile)" },
    "16":  { "$value": "4rem",     "$type": "dimension", "_px": "64px", "_description": "Section padding (tablet)" },
    "20":  { "$value": "5rem",     "$type": "dimension", "_px": "80px", "_description": "Large section gap" },
    "24":  { "$value": "6rem",     "$type": "dimension", "_px": "96px", "_description": "Section padding (desktop)" },
    "32":  { "$value": "8rem",     "$type": "dimension", "_px": "128px", "_description": "Hero spacing" },
    "40":  { "$value": "10rem",    "$type": "dimension", "_px": "160px", "_description": "Maximum section spacing" },
    "48":  { "$value": "12rem",    "$type": "dimension", "_px": "192px", "_description": "Dramatic whitespace" }
  },

  "size": {
    "_description": "Fixed component sizes.",

    "icon": {
      "xs": { "$value": "0.75rem",  "$type": "dimension", "_px": "12px" },
      "sm": { "$value": "1rem",     "$type": "dimension", "_px": "16px" },
      "md": { "$value": "1.25rem",  "$type": "dimension", "_px": "20px" },
      "lg": { "$value": "1.5rem",   "$type": "dimension", "_px": "24px" },
      "xl": { "$value": "2rem",     "$type": "dimension", "_px": "32px" }
    },

    "avatar": {
      "xs": { "$value": "1.5rem",  "$type": "dimension", "_px": "24px" },
      "sm": { "$value": "2rem",    "$type": "dimension", "_px": "32px" },
      "md": { "$value": "2.5rem",  "$type": "dimension", "_px": "40px" },
      "lg": { "$value": "3rem",    "$type": "dimension", "_px": "48px" },
      "xl": { "$value": "4rem",    "$type": "dimension", "_px": "64px" },
      "2xl": { "$value": "5rem",   "$type": "dimension", "_px": "80px" }
    },

    "input": {
      "sm": { "$value": "2rem",    "$type": "dimension", "_px": "32px", "_description": "Compact input height" },
      "md": { "$value": "2.5rem",  "$type": "dimension", "_px": "40px", "_description": "Default input height" },
      "lg": { "$value": "3rem",    "$type": "dimension", "_px": "48px", "_description": "Large input height" }
    },

    "button": {
      "sm": { "$value": "2rem",    "$type": "dimension", "_px": "32px" },
      "md": { "$value": "2.5rem",  "$type": "dimension", "_px": "40px" },
      "lg": { "$value": "3rem",    "$type": "dimension", "_px": "48px" },
      "xl": { "$value": "3.5rem",  "$type": "dimension", "_px": "56px" }
    }
  },

  "borderRadius": {
    "none":  { "$value": "0",        "$type": "dimension" },
    "sm":    { "$value": "0.25rem",   "$type": "dimension", "_px": "4px" },
    "md":    { "$value": "0.5rem",    "$type": "dimension", "_px": "8px" },
    "lg":    { "$value": "0.75rem",   "$type": "dimension", "_px": "12px" },
    "xl":    { "$value": "1rem",      "$type": "dimension", "_px": "16px" },
    "2xl":   { "$value": "1.25rem",   "$type": "dimension", "_px": "20px" },
    "3xl":   { "$value": "1.5rem",    "$type": "dimension", "_px": "24px" },
    "full":  { "$value": "9999px",    "$type": "dimension" }
  },

  "borderWidth": {
    "none":   { "$value": "0px",   "$type": "dimension" },
    "thin":   { "$value": "1px",   "$type": "dimension" },
    "medium": { "$value": "1.5px", "$type": "dimension" },
    "thick":  { "$value": "2px",   "$type": "dimension" }
  },

  "shadow": {
    "_description": "Warm-tinted shadows for organic depth.",
    "xs":   { "$value": "0 1px 2px rgba(36, 34, 32, 0.04)", "$type": "shadow" },
    "sm":   { "$value": "0 1px 3px rgba(36, 34, 32, 0.06), 0 1px 2px rgba(36, 34, 32, 0.04)", "$type": "shadow" },
    "md":   { "$value": "0 4px 6px -1px rgba(36, 34, 32, 0.06), 0 2px 4px -2px rgba(36, 34, 32, 0.04)", "$type": "shadow" },
    "lg":   { "$value": "0 10px 15px -3px rgba(36, 34, 32, 0.07), 0 4px 6px -4px rgba(36, 34, 32, 0.04)", "$type": "shadow" },
    "xl":   { "$value": "0 20px 25px -5px rgba(36, 34, 32, 0.08), 0 8px 10px -6px rgba(36, 34, 32, 0.04)", "$type": "shadow" },
    "2xl":  { "$value": "0 25px 50px -12px rgba(36, 34, 32, 0.18)", "$type": "shadow" },
    "inner": { "$value": "inset 0 2px 4px rgba(36, 34, 32, 0.04)", "$type": "shadow" }
  },

  "layout": {
    "breakpoint": {
      "sm":  { "$value": "640px",  "$type": "dimension", "_description": "Small mobile" },
      "md":  { "$value": "768px",  "$type": "dimension", "_description": "Tablet portrait" },
      "lg":  { "$value": "1024px", "$type": "dimension", "_description": "Tablet landscape / small desktop" },
      "xl":  { "$value": "1280px", "$type": "dimension", "_description": "Desktop" },
      "2xl": { "$value": "1440px", "$type": "dimension", "_description": "Wide desktop" },
      "3xl": { "$value": "1680px", "$type": "dimension", "_description": "Ultra-wide" }
    },

    "container": {
      "sm":   { "$value": "640px",  "$type": "dimension" },
      "md":   { "$value": "768px",  "$type": "dimension" },
      "lg":   { "$value": "1024px", "$type": "dimension" },
      "xl":   { "$value": "1280px", "$type": "dimension" },
      "2xl":  { "$value": "1440px", "$type": "dimension" },
      "prose": { "$value": "720px",  "$type": "dimension", "_description": "Optimal text reading width" }
    },

    "sidebar": {
      "collapsed": { "$value": "64px",  "$type": "dimension" },
      "compact":   { "$value": "200px", "$type": "dimension" },
      "default":   { "$value": "260px", "$type": "dimension" },
      "expanded":  { "$value": "320px", "$type": "dimension" }
    },

    "grid": {
      "columns": { "$value": 12, "$type": "number" },
      "gutter":  { "$value": "1.5rem", "$type": "dimension", "_px": "24px" },
      "margin": {
        "mobile":  { "$value": "1rem",   "$type": "dimension", "_px": "16px" },
        "tablet":  { "$value": "1.5rem", "$type": "dimension", "_px": "24px" },
        "desktop": { "$value": "2rem",   "$type": "dimension", "_px": "32px" }
      }
    },

    "zIndex": {
      "base":     { "$value": 0,    "$type": "number" },
      "dropdown": { "$value": 100,  "$type": "number" },
      "sticky":   { "$value": 200,  "$type": "number" },
      "overlay":  { "$value": 300,  "$type": "number" },
      "modal":    { "$value": 400,  "$type": "number" },
      "popover":  { "$value": 500,  "$type": "number" },
      "toast":    { "$value": 600,  "$type": "number" },
      "tooltip":  { "$value": 700,  "$type": "number" }
    }
  }
}
